!!!
%html{ lang: 'en' }
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title Artbook
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body
    %nav.navbar.navbar-inverse{role: "navigation"}
      .container-fluid
        .navbar-header 
          ArtBook
        %ul.nav.navbar-nav
          %li.active
            =link_to "Home", root_path
          %li.active
            =link_to "Categories", root_path
          %li.active
            -if user_signed_in?
              =link_to "Show my profile", user_path(current_user)
    
        %p.navbar-text.navbar-right
          -if user_signed_in?
            Signed in as 
            = link_to current_user.email, user_path(current_user)
            = link_to 'Logout', destroy_user_session_path, :method => :delete, :class => 'btn btn-danger btn-sm'       
          -else
            = link_to 'Login', new_user_session_path, :class => 'btn btn-primary btn-sm'
            or
            = link_to "Sign up", new_user_registration_path, :class => 'btn btn-primary btn-sm'
    .container
      .jumbotron
        .row
          .col-lg-12
            = yield