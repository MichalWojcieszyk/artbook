= form_for art do |f|
  - if art.errors.any?
    #error_explanation
      %h2= "#{pluralize(art.errors.count, "error")} prohibited this piece of art from being saved:"
      %ul
        - art.errors.full_message.each do |msg|
          %li= msg
  
  .field
  = f.label :title
  %br
  = f.text_field :title, required: true, autofocus: true
  .field
  = f.label :description
  %br
  = f.text_area :description
  .field
  = f.label :production_date
  %br
  = f.date_field :production_date
  .field
  = f.label :author
  %br
  = f.text_field :author, list: 'author-name'
  %datalist#author-name
    - Author.all.each do |author|
      %option{ value: author.name }
  .field
  = f.label :style
  %br
  = f.text_field :style, list: 'style-name'
  %datalist#style-name
    - Category.all.each do |cat|
      %option{ value: cat.name }
  %br
  .field
  = f.label :image
  %br
  = f.text_field :image
  .field
  = f.label :owner
  %br
  = f.text_field :owner
  .field
  = f.label :location
  %br
  = f.text_field :location
  %br

  .actions
  = f.submit